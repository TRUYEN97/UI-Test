<UserControl x:Class="UiTest.View.TabItemView.TabSettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UiTest.View.TabItemView"
             xmlns:Component="clr-namespace:UiTest.View.Component"
             mc:Ignorable="d"
             d:DesignHeight="250" d:DesignWidth="600">
    <Grid Background="AliceBlue">
        <StackPanel>
            <Grid  Margin="10,10,10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"  Text="Product"/>
                <TextBox Grid.Column="1" Text="{Binding Product, Mode=TwoWay}" HorizontalContentAlignment="Center"/>
            </Grid>
            <Grid Margin="10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"  Text="Station"/>
                <TextBox Grid.Column="1" Text="{Binding Station, Mode=TwoWay}" HorizontalContentAlignment="Center"/>
            </Grid>
            <Grid Margin="10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"  Text="Log path"/>
                <TextBox Grid.Column="1" Text="{Binding LogPath, Mode=TwoWay}" HorizontalContentAlignment="Center"/>
            </Grid>
            <Grid Margin="10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"  Text="Column"/>
                <TextBox Grid.Column="1" Text="{Binding Column, Mode=TwoWay}" HorizontalContentAlignment="Center"/>
            </Grid>
            <Grid Margin="10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"  Text="Row"/>
                <TextBox Grid.Column="1" Text="{Binding Row, Mode=TwoWay}" HorizontalContentAlignment="Center"/>
            </Grid>
            <Grid Margin="10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"  Text="View"/>
                <ComboBox Grid.Column="1" ItemsSource="{Binding ViewNames}" SelectedItem="{Binding ViewSelected}"  HorizontalContentAlignment="Center"/>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <StackPanel  HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Content="Add" Command="{Binding AddProperty}" Margin="0,10" HorizontalContentAlignment="Center" Width="50"/>
                    <Button Content="Delete" Command="{Binding DeleteProperty}" Margin="0" HorizontalContentAlignment="Center" Width="50"/>
                </StackPanel>
                <ContentControl Grid.Column="1" Content="{Binding ListBoxModelView}"/>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
