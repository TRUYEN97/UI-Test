<UserControl x:Class="UiTest.View.TabItemView.TabErrorCodeSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UiTest.View.TabItemView"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="350">
    <Grid>
        <Border Background="AliceBlue">
            <StackPanel>
                <Grid  Margin="10,10,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Is show missing errro code" Margin="0,0,10,0"/>
                    <CheckBox Grid.Column="1" IsChecked="{Binding IsShowMissing, Mode=TwoWay}"/>
                </Grid>
                <Grid Margin="10,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"  Text="Local path"/>
                    <TextBox Grid.Column="1" Text="{Binding LocalPath, Mode=TwoWay}" HorizontalContentAlignment="Center"/>
                </Grid>
                <Grid Margin="10,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"  Text="New path"/>
                    <TextBox Grid.Column="1" Text="{Binding NewLocalPath, Mode=TwoWay}" HorizontalContentAlignment="Center"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
